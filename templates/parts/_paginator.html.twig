{% if paginator.numPages > 1 %}
    <nav aria-label="Posts pagination">
        <div class="container my-5">
            <ul class="pagination justify-content-center">
                {% if paginator.prevUrl %}
                    <li class="page-item">
                        <a class="page-link" href="{{ paginator.prevUrl }}">&laquo; Previous</a>
                    </li>
                {% endif %}

                {% for page in paginator.pages %}
                    {% if page.url %}
                        <li {{ page.isCurrent ? 'class="page-item active"' : '' }}>
                            <a class="page-link" href="{{ page.url }}">{{ page.num }}</a>
                        </li>
                    {% else %}
                        <li class="disabled"><span>{{ page.num }}</span></li>
                    {% endif %}
                {% endfor %}

                {% if paginator.nextUrl %}
                    <li class="page-item">
                        <a class="page-link" href="{{ paginator.nextUrl }}">Next &raquo;</a>
                    </li>
                {% endif %}
            </ul>
        </div>
    </nav>
{% endif %}